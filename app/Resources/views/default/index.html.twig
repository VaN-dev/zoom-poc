{% extends 'base.html.twig' %}

{% block body %}
    <h1>Zoom integration</h1>

    <h2>Users</h2>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Email</th>
            <th scope="col">Timezone</th>
            <th scope="col">Created at</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.first_name }}</td>
                    <td>{{ user.last_name }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.timezone }}</td>
                    <td>{{ user.created_at | date('Y-m-d') }}</td>
                    <td><a href="{{ path('user.read', {userId: user.id}) }}">read</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock body %}
